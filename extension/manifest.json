{
  "manifest_version": 3,
  "name": "Price-Trackr Overlay",
  "version": "0.1.0",
  "description": "Track prices from any product page.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://api.example.com/*", "https://ws.example.com/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup/index.html" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content_script.js"], "run_at": "document_idle" }
  ]
}
